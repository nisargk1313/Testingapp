<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_landing_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rathin.testing.landing_page"
    android:padding="5dp">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="51"
            android:layout_marginTop="10dp"
            android:elevation="10dp"
            app:cardCornerRadius="11dp"
            android:clickable="true"
            android:id="@+id/cvAttendance">

            <TextView
                android:text="Attendance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textSize="32sp"
                android:textStyle="bold|italic"
                android:typeface="serif"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/ic_people_black_48dp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="51"
            android:layout_marginTop="10dp"
            android:elevation="10dp">

            <TextView
                android:text="Stock &amp; Sales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:typeface="serif"
                android:textSize="32sp"
                android:textColor="@android:color/black"
                android:drawableLeft="@drawable/ic_trending_up_black_48dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold|italic" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

</RelativeLayout>
